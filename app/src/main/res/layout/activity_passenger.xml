<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PassengerActivity" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnPassenger_RequestCar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Request a car" />

            <Button
                android:id="@+id/btnPassenger_BeepBeep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beepbeep" />

            <Button
                android:id="@+id/btnPassenger_LogOutFromPassengerActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout From App" />

        </LinearLayout>

    </fragment>


</LinearLayout>



